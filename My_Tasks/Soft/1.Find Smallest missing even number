Enter the no of elements: 5
Enter 5 even numbers in Ascending order: 2 4 6 8 12
Missing number:10


import java.util.Scanner;
public class Freq_of_char_usingloops {
    public static void main(String[] args) {
        Scanner sc= new Scanner(System.in);
        System.out.print("Enter the no of elements: ");
        int n= sc.nextInt();
        int[]arr=new int[n];
        System.out.print("Enter "+n+" even numbers in Ascending order: ");
        for(int i=0;i<n;i++){
            arr[i]=sc.nextInt();
        }
        sc.close();
        int diff=arr[1]-arr[0];
        boolean missingfound=false;
        for(int i=0;i<arr.length-1;i++){
            if(arr[i+1]-arr[i]!=diff){
                int missing=arr[i]+diff;
                System.out.print("Missing number:"+ missing);
                missingfound=true;
                break;
            }
        }
        if(!missingfound){
            System.out.print("No missing found: "+(arr[arr.length-1]+diff));
        }
    }
}
